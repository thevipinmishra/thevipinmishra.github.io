<style lang="scss">
  @import "../styles/_mixins.scss";
  // Projects

  .projects-grid {
    display: grid;
    gap: 3rem;

    @include break(lg) {
      grid-template-columns: 1fr 1fr;
    }

    .project-item {
      @include card-base;
      display: flex;
      flex-direction: column;
      box-shadow: var(--shadow-1);
      border: 1px solid;
      border-color: var(--grape-5);

      &:nth-child(2n) {
        border-color: var(--lime-5);
      }

      &:nth-child(3n) {
        border-color: var(--violet-5);
      }

      &:nth-child(3n + 1) {
        border-color: var(--indigo-5);
      }

      .project-title {
        font-size: var(--font-size-fluid-2);
        line-height: 1.125;
      }

      .project-about {
        font-size: 0.9rem;
        line-height: 1.6;
        flex: 1;

        a {
          color: var(--accent);
          font-weight: 500;
          text-decoration: underline;
        }
      }

      .links {
        display: flex;
        gap: 1rem;

        a {
          display: flex;
          align-items: center;
          justify-content: center;
          gap: 0.5em;
          font-size: 0.88rem;
          font-weight: 600;
          flex: 1;
          padding: 0.7em 1em;
          border-radius: var(--radius-2);
          background: var(--accent);
          color: #fff;

          &:hover {
            background: var(--accent-dark);
          }

          @include focus-ring;
        }
      }
    }
  }

  .other-project-grid {
    display: grid;
    gap: 3rem;

    .op-item {
      padding: 2rem 2rem 2rem 3rem;
      border-radius: var(--radius-2);
      background-color: #fff;
      border: 1.5px solid;
      --border: var(--yellow-5);
      border-color: var(--border);

      &:nth-child(2n) {
        --border: var(--teal-5);
      }

      &:nth-child(3n) {
        --border: var(--grape-5);
      }

        &:nth-child(4n) {
        --border: var(--red-5);
      }

      .project-about {
         a {
          color: var(--accent);
          font-weight: 500;
          text-decoration: underline;
        }
      }

      h3 {
        font-size: var(--font-size-fluid-1);
        line-height: 1.125;
        position: relative;

        &::before {
          content: "";
          --size: 0.5rem;
          height: var(--size);
          width: var(--size);
          border-radius: 50%;
          background: var(--border);
          position: absolute;
          left: -1.75rem;
          top: 0.5ch;
        }
      }

      p {
        font-size: 0.88rem;

        @include break(md) {
          font-size: var(--size-3);
        }
      }

      .links {
        display: flex;
        gap: 1.5rem;

        a {
          color: var(--accent);
          font-size: 0.9rem;
          font-weight: 600;

          &:hover {
            color: var(--accent-dark);
            text-decoration: underline;
          }

          @include focus-ring;
        }
      }
    }
  }
</style>
