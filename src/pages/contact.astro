---
import "../styles/main.scss";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import { TelegramLogo, ArrowLeft } from "phosphor-react";

// Vars
let title = "Contact | Vipin Mishra";
let metaDescription =
  "I design & develop modern websites with pixel-perfection in mind, love solving complex design problems & have a strong devotion towards CSS";
const ogImage = "/Vipin-Mishra.png";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={metaDescription} />
    <title>{title}</title>
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#1270e3" />

    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={ogImage} />
  </head>
  <body class="contact d-flex flex-column">
    <Nav />
    <header class="contact-header">
      <div class="contact-header-inner text-center container">
        <h2 class="headline">Contact</h2>
        <p class="text-muted">Got something to talk about? Let's connect!</p>
      </div>
    </header>
    <main class="contact-content">
      <div class="main-inner container">

        <div class="d-flex flex-column flex-lg-row align-items-stretch align-items-lg-center justify-content-between gap-5">
            <div class="mail text-center flex-fill">
                <p class="email-id">thevipinmishra@gmail.com</p>
                <span class="mail-helper-text text-muted d-inline-block mt-2"
                  >I usually reply within 2-3 hours.</span
                >
              </div>

            <div class="text-center flex-fill">
                <a href="https://t.me/thevipinmishra" class="telegram-btn"
                  ><TelegramLogo size={20} /> Telegram</a
                >
                <span class="telegram-helper-text text-muted d-inline-block mt-2"
                  >For almost instant replies.</span
                >
              </div>
      
           
      
           
        </div>
      
      </div>

      <a href="/" class="back-to-home"><ArrowLeft size={20} /> Back to Home</a>
    </main>
    <Footer />
  </body>
</html>

<style lang="scss">
  @import "../styles/_mixins.scss";

  .contact-header {
    padding-block: var(--size-10);
    background: var(--gray-1);

    .headline {
      font-weight: 800;
      font-size: var(--size-fluid-5);
      margin-block-end: 0.5rem;
    }
  }

  .contact-content {
    flex: 1;
    padding-block: var(--size-10);

    .telegram-btn {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 1ch;
      padding: 0.75rem 1rem;
      font-weight: 500;
      background: #0088cc;
      color: #fff;
      border-radius: var(--radius-2);

      @include focus-ring;

      &:hover {
        background: #0071aa;
      }
    }

    .mail {
        
      .email-id {
        background: var(--gray-1);
        font-weight: 600;
        padding: 0.75rem 1rem;
        border-radius: var(--radius-2);
      }
      .mail-helper-text {
        font-size: 0.8rem;
      }
    }

    .telegram-helper-text {
      font-size: 0.8rem;
    }
  }

  .back-to-home {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1ch;
    max-width: 200px;
    margin-block-start: var(--size-12);
    margin-inline: auto;
    background: var(--accent);
    color: #fff;
    font-weight: 600;
    padding: 0.75rem 1rem;
    border-radius: var(--radius-2);

    @include focus-ring;
  }
</style>
